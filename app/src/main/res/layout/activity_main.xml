<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    its good practice to append IDs with view type-->
    <TextView
        android:id="@+id/flashcard_question_textview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="What year is it?"
        android:textSize="40sp"
        android:textColor="#3d5a80"
        android:background="@drawable/card_background"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/flashcard_answer_textview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#f77f00"
        android:gravity="center"
        android:text="2022"
        android:textColor="#98c1d9"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/possible_answer_one_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/flashcard_question_textview"
        android:text="2012"
        android:textSize="30sp"
        android:textColor="#293241"
        android:layout_margin="25dp"
        android:background="#ffe8d6"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/possible_answer_two_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/possible_answer_one_textView"
        android:text="2017"
        android:textSize="30sp"
        android:textColor="#293241"
        android:layout_margin="25dp"
        android:background="#ffe8d6"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/possible_answer_three_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/possible_answer_two_textView"
        android:text="2022"
        android:textSize="30sp"
        android:textColor="#293241"
        android:layout_margin="25dp"
        android:background="#ffe8d6"
        android:padding="15dp"/>

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/possible_answer_three_textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/visibility_icon_foreground" />

    <!--    constraint layout is better than relative layout-->
</RelativeLayout>